namespace test

asset Ballot identified by ballotId {
  o String ballotId
  o Boolean used default=false
  --> User owner
}

abstract participant User identified by userId {
  o String userId
  o String firstName
  o String lastName
}
participant Voter extends User {
  o String address
  o String AdharId
  o Boolean hasVoted default=false
  o String Choice default="none"
  //o String ballotid
}
participant NationalAdmin identified by AdminID{
o String AdminID
o String firstName
o String lastName
}

participant LocalAdmin identified by AdminID{
o String AdminID
o String firstName
o String lastName
}

participant Party identified by PartyId{
  o String PartyId
  o String PartyName
  o String PartySymbol
}
participant Candidate extends User {
  --> Party party
}

transaction Vote {
  o String voteId
  --> Ballot ballot
  --> Candidate newOwner
}
